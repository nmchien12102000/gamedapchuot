<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scaleType="fitXY"
    android:background="@drawable/backgroundscore"
    >


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="118dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="293dp"
        android:layout_marginBottom="8dp"
        android:elevation="20dp"
        android:src="@drawable/btn_back" />

    <TextView
        android:id="@+id/txt_status_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_controll"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="409dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="214dp"
        android:text="Game Over"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="70dp"
        android:text="9999"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_controll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btnPlay"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="TODO"
            android:scaleType="fitXY"

            android:src="@drawable/btn_play" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_write_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/edt_write_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wirte your name"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColorHint="#797878" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_skip"
                android:layout_width="149dp"
                android:layout_height="54dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/btn_skip"
                android:textAlignment="center"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/btn_Ok"
                android:layout_width="145dp"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/btn_ok"
                android:textAlignment="center" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
